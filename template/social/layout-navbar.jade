// Navbar
.w3-top
  ul.w3-navbar.w3-theme-d2.w3-left-align.w3-large
    li.w3-hide-medium.w3-hide-large.w3-opennav.w3-right
      a.w3-padding-large.w3-hover-white.w3-large.w3-theme-d2(href="javascript:void(0);", onclick="openNav()")
        i.fa.fa-bars
    li
      a.w3-padding-large.w3-theme-d4(href="#")
        i.fa.fa-home.w3-margin-right
        | #{site.name}
    each nav in site.nav
      if (nav.roles.indexOf(user.role) > -1)
        li.w3-hide-small
          a.w3-padding-large.w3-hover-white(href=nav.link, title=nav.title)
            i.fa(class='fa-'+nav.icon)
    //
      li.w3-hide-small
        a.w3-padding-large.w3-hover-white(href="#", title="News")
          i.fa.fa-globe
      li.w3-hide-small
        a.w3-padding-large.w3-hover-white(href="#", title="Account Settings")
          i.fa.fa-user
      li.w3-hide-small
        a.w3-padding-large.w3-hover-white(href="#", title="Messages")
          i.fa.fa-envelope
      li.w3-hide-small.w3-dropdown-hover
        a.w3-padding-large.w3-hover-white(href="#", title="Notifications")
          i.fa.fa-bell
          span.w3-badge.w3-right.w3-small.w3-green 3
        div.w3-dropdown-content.w3-white.w3-card-4
          a(href="#") One new friend request
          a(href="#") John Doe posted on your wall
          a(href="#") Jane likes your post
    li.w3-hide-small.w3-right
      a.w3-padding-large.w3-hover-white(href="#", title="My Account")
        img.w3-circle(src="http://graph.facebook.com/#{user.facebook_id}/picture?type=small", style="height:25px;width:25px", alt="Avatar")

// Navbar on small screens
.w3-hide.w3-hide-large.w3-hide-medium.w3-top(id="navDemo", style="margin-top:51px")
  ul.w3-navbar.w3-left-align.w3-large.w3-theme
    each nav in site.nav
      li
        a.w3-padding-large(href=nav.link) #{nav.title}
